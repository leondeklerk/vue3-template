{
	"name": "leon-library",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/main.js",
			"types": "./dist/types/main.d.ts"
		},
		"./views": {
			"import": "./dist/views/views.js",
			"types": "./dist/types/views/views.d.ts"
		},
		"./stores": {
			"import": "./dist/stores/stores.js",
			"types": "./dist/types/stores/stores.d.ts"
		},
		"./components": {
			"import": "./dist/components/components.js",
			"types": "./dist/types/components/components.d.ts"
		}
	},
	"files": ["dist"],
	"scripts": {
		"dev": "vite",
		"build": "run-s check build-only",
		"build-only": "vite build && vue-tsc --emitDeclarationOnly -p tsconfig.app.json && move dist/src dist/types",
		"check": "run-s type-check lint",
		"lint": "eslint --ext .ts,.vue,.js --max-warnings 0 .",
		"lint:fix": "eslint --ext .ts,.vue,.js --fix .",
		"prepare": "husky",
		"preview": "vite preview",
		"test:unit": "vitest",
		"type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false "
	},
	"lint-staged": {
		"*.{js,ts,vue}": "eslint --ext .ts,.vue,.js --max-warnings 0"
	},
	"peerDependencies": {
		"pinia": "2.1.7",
		"vue": "3.4.21",
		"vue-router": "4.3.0"
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "6.5.1",
		"pinia": "2.1.7",
		"vue": "3.4.21",
		"vue-router": "4.3.0"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "1.8.0",
		"@tailwindcss/forms": "0.5.7",
		"@tsconfig/node20": "20.1.2",
		"@types/node": "20.11.30",
		"@vitejs/plugin-vue": "5.0.4",
		"@vue/eslint-config-prettier": "9.0.0",
		"@vue/eslint-config-typescript": "13.0.0",
		"@vue/tsconfig": "0.5.1",
		"autoprefixer": "10.4.18",
		"eslint": "8.57.0",
		"eslint-plugin-vue": "9.23.0",
		"husky": "9.0.11",
		"lint-staged": "15.2.2",
		"npm-run-all2": "6.1.2",
		"postcss": "8.4.37",
		"prettier": "3.2.5",
		"tailwindcss": "3.4.1",
		"typescript": "5.4.2",
		"vite": "5.2.0",
		"vite-plugin-dts": "^3.8.1",
		"vitest": "1.4.0",
		"vue-tsc": "2.0.7"
	}
}
